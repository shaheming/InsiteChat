<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <%= fa_icon "commenting-o", text: "Chat"  %>
      </div>
      <div class="panel-body" id="chat-body">
        <ul class="chat">
          <% @messages.each do |message| %>
          <% if message.content %>
          <li class="<%= message.user_id == current_user.id ? "right" : "left"%> clearfix" >
            <span class="chat-img <%= message.user_id == current_user.id ? "pull-right" : "pull-left"%>">
              <img src="http://placehold.it/50/FA6F57/fff&text=<%= message.user_id == current_user.id ? "M" : "F"%>" alt="User Avatar" class="img-circle">
            </span>
            <div class="chat-body clearfix">
              <div class="header">
                <% user = User.find(message.user_id)%>
                <strong class="primary-font"><%= user.username %></strong>
                <p>
                  <%= message.content %>
                  <% if current_user == user %>
                  <%= link_to("Delete",conversation_message_path(@conversation,message),method: :delete,data:{confirm: "Are you sure?"}) %>
                  <% end %>
                </p>
              </div>
            </div>
          </li>
          <% end %>
          
          <% end %>
        </ul>
      </div>
      <div class="panel-footer">
        <%= form_for [@conversation,Message.new] do |f| %>
        <div class="input-group">
          <%= f.label :content %>
          <%= f.text_area :content, class:"form-control input-sm",placeholder: "Type your message here..." %>
          <span class="input-group-btn">
            <%= f.submit "Send",class: "btn btn-warning btn-sm",id: "btn-chat" %>
          </span>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>